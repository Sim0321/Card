{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@shared/*": ["src/components/shared/*"],
      "@contexts/*": ["src/contexts/*"],
      "@models/*": ["src/models/*"],
      "@pages/*": ["src/pages/*"],
      "@remote/*": ["src/remote/*"],
      "@constants": ["src/constants/index"],
      "@icon": ["src/assets/icons/index"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
